    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug client",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rustcycles",
                    "--package=rustcycles"
                ],
                "filter": {
                    "name": "rustcycles",
                    "kind": "bin"
                }
            },
            "args": [
                "--windowed",
                "client"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug server",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rustcycles",
                    "--package=rustcycles"
                ],
                "filter": {
                    "name": "rustcycles",
                    "kind": "bin"
                }
            },
            "args": [
                "server"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rustcycles'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=rustcycles",
                    "--package=rustcycles"
                ],
                "filter": {
                    "name": "rustcycles",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
